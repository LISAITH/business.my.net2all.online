{% extends 'base.html.twig' %} {% block title %}
  Ajouter un service
{% endblock %} {% block body %}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Ajouter un service</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">
                <a href="#">Accueil</a>
              </li>
              <li class="breadcrumb-item active">Ajouter un Service</li>
            </ol>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <!-- left column -->
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-secondary">
              <div class="card-header">
                <h3 class="card-title">Ajouter un Service</h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              {{ form_start(form, {'method': 'POST'}) }}
                <div class="card-body row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Nom du Service</label>
                        <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        {{ form_widget(form.libelle)}}
                        </div>
                    </div>
                      <div class="texte-light text-danger mt-0 ">{{ form_errors(form.libelle) }} </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputFile">Lier une image</label>
                        <div class="input-group">
                          <div class="custom-file">
                            {{ form_widget(form.logo)}}
                            <label class="custom-file-label" for="exampleInputFile">Choisir une image</label>
                          </div>
                          <div class="input-group-append">
                            <span class="input-group-text">Téléverser</span>
                          </div>
                        </div>
                      </div>
                </div>
                 <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Url du site</label>
                        <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                        {{ form_widget(form.url)}}
                        </div>
                    </div>
                      <div class="texte-light text-danger mt-0 ">{{ form_errors(form.url) }} </div>
                </div>
                 <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Url de l'application</label>
                        <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                        {{ form_widget(form.app_url)}}
                        </div>
                    </div>
                      <div class="texte-light text-danger mt-0 ">{{ form_errors(form.app_url) }} </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Etat du service</label>
                        <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                        {{ form_widget(form.etat)}}
                        </div>
                    </div>
                      <div class="texte-light text-danger mt-0 ">{{ form_errors(form.etat) }} </div>
                </div>
                  <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Installation</label>
                        <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                        {{ form_widget(form.required_installation)}}
                        </div>
                    </div>
                      <div class="texte-light text-danger mt-0 ">{{ form_errors(form.required_installation) }} </div>
                </div>
                 <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Description du service</label>
                        <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                        {{ form_widget(form.description)}}
                        </div>
                    </div>
                      <div class="texte-light text-danger mt-0 ">{{ form_errors(form.description) }} </div>
                </div>
                </div>
                <!-- /.card-body -->

                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Ajouter le Service</button>
                </div>
                {{ form_end(form) }}
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col (left) -->
          <!-- right column -->
          <!-- /.col (right) -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}