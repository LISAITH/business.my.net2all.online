{% extends 'base.html.twig' %}

{% block title %}
  {{ controller_name ?? 'Business' }}
{% endblock %}

{% block sidebar %}
  {% include 'layouts/sidebar/distributeur.html.twig' %}
{% endblock %}


{% block body %}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Tous Mes points de vente</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">
                <a href="#">Accueil</a>
              </li>
              <li class="breadcrumb-item active">Mes points de ventes</li>
            </ol>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            {% for message in app.flashes('point_vente_add') %}
              <div class="alert alert-success">{{ message }}</div>
            {% endfor %}

            {% for message in app.flashes('point_vente_update') %}
              <div class="alert alert-success">{{ message }}</div>
            {% endfor %}

            {% for message in app.flashes('point_vente_unvalidate') %}
              <div class="alert alert-success">{{ message }}</div>
            {% endfor %}

            {% for message in app.flashes('point_vente_validate') %}
              <div class="alert alert-success">{{ message }}</div>
            {% endfor %}

            {% for message in app.flashes('point_vente_errors') %}
              <div class="alert alert-secondary">{{ message }}</div>
            {% endfor %}

            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Mes points de vente</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>Nom</th>
                      <th>Type</th>
                      <th>Etat du point de vente</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for line in point_ventes %}
                      <tr>
                        <td>{{ line.getNomPointVente }}</td>
                        <td>
                          {% if line.getType == 1 %}
                            Mobile
                          {% else %}
                            Fixe
                          {% endif %}
                        </td>
                        <td>
                          {% if line.isStatus %}
                            <span class="badge badge-success">activé</span>
                          {% else %}
                            <span class="badge badge-secondary">désactivé</span>
                          {% endif %}
                        </td>

                        <td class="text-right">
                          {% if line.isStatus %}
                            <a class="btn btn-sm btn-secondary" href="{{ path('point_ventes.status.unvalidate', { id: line.id }) }}">Désactiver</a>
                          {% else %}
                            <a href="{{ path('point_ventes.status.validate', { id: line.id }) }}" class="btn btn-sm btn-success">Activer</a>
                          {% endif %}
                          <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#modal{{ line.id }}">Abonnement</button>
                          <a class="btn btn-sm btn-secondary" href="{{ path('point_ventes.update', { id: line.id }) }}">Modifier</a>
                        </td>
                        <div class="modal fade" id="modal{{ line.id }}" style="display: none;" aria-hidden="true">
                          <form action="{{ path('point_ventes.give', { id: line.id }) }}" method="post">
                            <div class="modal-dialog modal-md">
                              <div class="modal-content">
                                <div class="modal-header badge badge-secondary">
                                  <h5 class="modal-title">Entrer le nombre d'abonnement à confier ce point de vente</h5>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                                </div>
                                <div class="modal-body">
                                  <p>Entrer le nombre d'abonnement à confier ce point de vente</p>
                                  <div class="form-group">
                                    <label for="id{{ line.id }}">Nombre</label>
                                    <input type="number" id="id{{ line.id }}" class="form-control" name="number" />
                                  </div>
                                </div>
                                <div class="modal-footer card-footer text-right py-0">
                                  <button type="button" class="btn btn-default" data-dismiss="modal">fermer</button>

                                  <button type="submit" class="btn btn-primary">générer</button>
                                </div>
                              </div>
                              <!-- /.modal-content -->
                            </div>
                            <!-- /.modal-dialog -->
                          </form>
                        </div>
                      </tr>
                    {% endfor %}
                  </tbody>
                  <tfoot>
                    <tr>
                      <th>Nom</th>
                      <th>Type</th>
                      <th>Etat du point de vente</th>
                      <th>Action</th>
                    </tr>
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}
