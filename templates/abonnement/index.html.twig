{% extends 'base.html.twig' %}

{% block title %}
  {{ controller_name ?? 'Business' }}
{% endblock %}

{% block sidebar %}
  {% include 'layouts/sidebar/partenaire.html.twig' %}
{% endblock %}

{% block body %}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Tous Mes Abonnements</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">
                <a href="#">Accueil</a>
              </li>
              <li class="breadcrumb-item active">Tous Mes Abonnements</li>
            </ol>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            {% for message in app.flashes('abonnement_add') %}
              <div class="alert alert-success">{{ message }}</div>
            {% endfor %}

            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Tous Mes Abonnements</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>Numéro de Série</th>
                      <th>Numéro d'Activation</th>
                      <th class="text-center">Disponibilité de l'Abonnement</th>
                      <th class="text-center">Etat de L'Abonnement</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for abonnement in abonnements %}
                      <tr>
                        <td>{{ abonnement.getNumeroSerie() }}</td>
                        <td>{{ abonnement.getNumeroActivation() }}</td>
                        <td class="text-center">
                          {% if abonnement.isStatus %}
                            <span class="badge badge-success">disponible</span>
                          {% else %}
                            <span class="badge badge-secondary">Non disponible</span>
                          {% endif %}
                        </td>
                        <td class="text-center">
                          {% if abonnement.getActivationAbonnements %}
                            <span class="badge badge-success">activé</span>
                          {% else %}
                            <span class="badge badge-secondary">désactivé</span>
                          {% endif %}
                        </td>

                        <td class="text-right">
                          {% if abonnement.getActivationAbonnements %}
                            <button type="button" data-toggle="modal" data-target="#modal{{ abonnement.getId }}" class="btn btn-sm btn-primary">Enseigne</button>
                          {% else %}
                            {% if abonnement.isStatus() %}
                              <a class="btn btn-sm btn-secondary" href="{{ path('abonnements.status.unvalidate', { id: abonnement.id }) }}">Modifier</a>
                            {% else %}
                              <a href="{{ path('abonnements.status.validate', { id: abonnement.id }) }}" class="btn btn-sm btn-success">Modifier</a>
                            {% endif %}
                          {% endif %}
                        </td>
                      </tr>
                      <div class="modal fade" id="modal{{ abonnement.getId }}" style="display: none;" aria-hidden="true">
                        <div class="modal-dialog modal-md">
                          <div class="modal-content">
                            <div class="modal-header badge badge-secondary">
                              <h5 class="modal-title">Les informations sur le client</h5>
                              <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                            </div>
                            <div class="modal-body">
                              {% if abonnement.getActivationAbonnements %}
                                {% set enseigne = abonnement.getActivationAbonnements.getEnseigne %}

                                <div>
                                  Nom de l'Enseigne : <b>{{ enseigne.getNomEnseigne }}</b>
                                  <hr />Nom du propriétaire : <b>{{ enseigne.getEntreprise.getNom }}</b>
                                  <hr />Prénoms du propriétaire: <b>{{ enseigne.getEntreprise.getPrenoms }}</b>
                                
                                  <hr />Email entreprise <b>{{ enseigne.getEntreprise.getEmail }}</b>
                                  <hr />Nom entreprise : <b>{{ enseigne.getEntreprise.getNomEntreprise }}</b>
                                  <hr />Numéro de téléphone : <b>{{ enseigne.getEntreprise.getNumTel }}</b>
                                  <hr />
                                </div>
                              {% else %}
                                <p>indisponible</p>
                              {% endif %}
                            </div>
                            <div class="modal-footer card-footer text-right py-0">
                              <button type="button" class="btn btn-default" data-dismiss="modal">fermer</button>
                            </div>
                          </div>
                          <!-- /.modal-content -->
                        </div>
                        <!-- /.modal-dialog -->
                      </div>
                    {% endfor %}
                  </tbody>
                  <tfoot>
                    <tr>
                      <th>Numéro de Série</th>
                      <th>Numéro d'Activation</th>
                      <th class="text-center">Disponibilité de l'Abonnement</th>
                      <th class="text-center">Etat de L'Abonnement</th>
                      <th>Action</th>
                    </tr>
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}
