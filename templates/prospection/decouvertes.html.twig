{% extends 'base.html.twig' %}

{% block title %}
  Business | la fiche de découverte
{% endblock %}

{% block body %}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>la fiche de découverte</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">
                <a href="#">Accueil</a>
              </li>
              <li class="breadcrumb-item active">la fiche de découverte</li>
            </ol>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-12">
            <!-- jquery validation -->
            <div class="card card-secondary">
              <div class="card-header">
                <h3 class="card-title"><small>La fiche de découverte</small></h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              <form action="{{path("prospections.decouvertes.create",{id:prospection.getId})}}" method="post">
              <div class="card-body row">
                   {% for question in questions %}
                        <div class="form-group col-md-6">
                        <label for="exampleInputEmail1">{{question.getLibelle}}</label>
                        <div class="ml-4">
                          <fieldset {{(preponses| length < 1)?"": "disabled" }} >
                            {% for reponse in question.getReponseDecouvertes %}
                                {% if reponse.isStatus or (reponse.getId in  preponses) %}
                                  {% if question.isMultiple %}
                                      <div class="custom-control custom-checkbox">
                                      
                                          <input  {{reponse.getId in  preponses ? "checked disabled":"" }} class="custom-control-input" name="reponse[check{{reponse.getId}}]" type="checkbox" id="reponse{{reponse.getId}}" value="{{reponse.getId}}">
                                          <label  for="reponse{{ reponse.getId }}" class="custom-control-label">{{reponse.getLibelle}}</label>
                                      </div>
                                  {% else %}
                                      <div class="custom-control custom-radio">
                                              <input {{reponse.getId in  preponses ? "checked disabled":"" }} class="custom-control-input" type="radio" id="reponse{{reponse.getId}}" name="reponse[radio{{question.getId}}]" value="{{reponse.getId}}">
                                              <label for="reponse{{ reponse.getId }}" class="custom-control-label">{{reponse.getLibelle}}</label>
                                      </div>
                                  {% endif %}
                                {% endif %}
                            
                            {% endfor %}
                          </fieldset>
                           
                        </div>
                        
    
                        </div>
                    {% endfor %}
              
              </div>
              <!-- /.card-body -->
              {% if preponses| length < 1 %}
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
              {% endif %}
             </form>
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col (left) -->
          <!-- right column -->
          <div class="col-md-6"></div>
          <!-- /.col (right) -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}
{% block javascripts %}
  
{% endblock %}

