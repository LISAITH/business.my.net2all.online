{% extends 'base.html.twig' %}

{% block title %}
  {{ controller_name ?? 'Business' }}
{% endblock %}

{% block sidebar %}
  {% include 'layouts/sidebar/partenaire.html.twig' %}
{% endblock %}

{% block body %}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Tous Mes Kits</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">
                <a href="#">Accueil</a>
              </li>
              <li class="breadcrumb-item active">Tous Mes Kits</li>
            </ol>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            {% for message in app.flashes('flash_success') %}
              <div class="alert alert-success">{{ message }}</div>
            {% endfor %}
              {% for message in app.flashes('flash_error') %}
              <div class="alert alert-success">{{ message }}</div>
            {% endfor %}

            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Tous Mes Kits</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                    <tr>
                      <th>Numéro de Série</th>
                      <th>Numéro d'Activation</th>
                      <th class="text-center">Etat du Kit</th>
                      <th>Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    {% for kit in kits %}
                      <tr>
                        <td>{{ kit.getNumeroSerie }}</td>
                        <td>{{ kit.getNumeroActivation }}</td>
                        <td class="text-center">
                          {% if kit.isStatus %}
                            <span class="badge badge-success">Activé</span>
                          {% else %}
                            <span class="badge badge-secondary">Désactiver</span>
                          {% endif %}
                        </td>
                        <td class="text-right">
                         
                            {% if kit.isStatus %}
                              <a class="btn btn-sm btn-secondary" href="{{ path('kits.status.unvalidate', { id: kit.getId }) }}">Désactiver</a>
                            {% else %}
                              <a href="{{ path('kits.status.validate', { id: kit.getId }) }}" class="btn btn-sm btn-success">Activer</a>
                            {% endif %}
                        
                        </td>
                      </tr>
                     
                    {% endfor %}
                  </tbody>
                  <tfoot>
                    <tr>
                      <th>Numéro de Série</th>
                      <th>Numéro d'Activation</th>
                      <th class="text-center">Etat du Kit</th>
                      <th>Action</th>
                    </tr>
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}
