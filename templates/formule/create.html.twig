{% extends 'base.html.twig' %} {% block title %}
 {{ controller_name }}
{% endblock %} {% block body %}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>
                {% if formule %}
                  Modifier une formule
                {% else %}
                  Ajouter une formule
                {% endif %}
            </h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">
                <a href="#">Accueil</a>
              </li>
              <li class="breadcrumb-item active">
                    {% if formule %}
                      Modifier une formule
                    {% else %}
                      Ajouter une formule
                    {% endif %}
              </li>
            </ol>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <!-- left column -->
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-secondary">
              <div class="card-header">
                <h3 class="card-title">
                    {% if formule %}
                      Modifier une formule
                    {% else %}
                      Ajouter une formule
                    {% endif %}
                </h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              {{ form_start(form, {'method': 'POST'}) }}
                <div class="card-body row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Nom de la formule</label>
                        <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text"><i class="fas fa-pencil-alt"></i></span>
                        </div>
                         {{ form_widget(form.nom_formule,{"attr":{"class":" form-control "}})}}
                      </div>
                      </div>
                      <div class="texte-light text-danger mt-0 ">{{ form_errors(form.nom_formule) }} </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Prix de la formule</label>
                        <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text"><i class="fas fa-pencil-alt"></i></span>
                        </div>
                         {{ form_widget(form.prix,{"attr":{"class":" form-control "}})}}
                      </div>
                      </div>
                      <div class="texte-light text-danger mt-0 ">{{ form_errors(form.nom_formule) }} </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">
                    {% if formule %}
                      Modifier une formule
                    {% else %}
                      Ajouter une formule
                    {% endif %}
                  </button>
                </div>
                {{ form_end(form) }}
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col (left) -->
          <!-- right column -->
          <!-- /.col (right) -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}