{% extends 'base.html.twig' %}
{% block title %}
  Dashboard
{% endblock %}

{% block body %}
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Tableau de Bord</h1>
          </div>
          <!-- /.col -->
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">
                <a href="#">Accueil</a>
              </li>
              <li class="breadcrumb-item active">Tableau de Bord</li>
            </ol>
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->

    <!-- Main content -->
    <div class="content">
      <div class="container-fluid">
     
          <div class="row">
          
            <!-- ./col -->
            <div class="col-md-12 col-sm-12 col-lg-3">
              <!-- small card -->
              <div class="small-box bg-success">
                <div class="inner">
                  <h3>{{ tab["Entreprises"] }}</h3>

                  <p>Entreprises</p>
                </div>
                <div class="icon">
                  <i class="ion ion-stats-bars"></i>
                </div>
              </div>
            </div>
            <!-- ./col -->
            <div class="col-md-12 col-sm-12 col-lg-3">
              <!-- small card -->
              <div class="small-box bg-warning">
                <div class="inner">
                  <h3>{{ tab["Enseignes"] }}</h3>

                  <p>Enseignes</p>
                </div>
                <div class="icon">
                  <i class="fas fa-user-plus"></i>
                </div>
              </div>
            </div>
            <!-- ./col -->
            <div class="col-md-12 col-sm-12 col-lg-3 ">
              <!-- small card -->
              <div class="small-box bg-danger">
                <div class="inner">
                  <h3>{{ tab["Particuliers"] }}</h3>

                  <p>Particuliers</p>
                </div>
                <div class="icon">
                  <i class="fas fa-chart-pie"></i>
                </div>
              </div>
            </div>
            <!-- ./col -->
            <div class="col-md-12 col-sm-12 col-lg-3">
              <!-- small card -->
              <div class="small-box bg-info">
                <div class="inner">
                  <h3>{{ tab["Abonnements"] }}</h3>

                  <p>Abonnements</p>
                </div>
                <div class="icon">
                  <i class="fas fa-shopping-cart"></i>
                </div>
              </div>
            </div>
          </div>
          <!-- /.col-md-3 col-6 -->
       
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- /.content -->
  </div>
{% endblock %}
