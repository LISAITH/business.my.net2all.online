{% extends 'base.html.twig' %}

{% block title %}
	{{ controller_name ?? "Business" }}
{% endblock %}

{% block sidebar %}
	{% include "layouts/sidebar/point_vente.html.twig" %}
{% endblock %}
{% block stylesheets %}

	<link
	rel="stylesheet" href="{{asset('plugins/fontawesome-free/css/all.min.css')}}">
	<!-- DataTables -->
	<link rel="stylesheet" href=" {{asset('plugins/datatables-bs4/css/dataTables.bootstrap4.min.css')}}">
	<link rel="stylesheet" href=" {{asset('plugins/datatables-responsive/css/responsive.bootstrap4.min.css')}} ">
	<link
	rel="stylesheet" href=" {{asset('plugins/datatables-buttons/css/buttons.bootstrap4.min.css')}}">
	<!-- Theme style -->
	<link rel="stylesheet" href=" {{asset('dist/css/adminlte.min.css')}}">
{% endblock %}
{% block body %}
	<!-- Content Wrapper. Contains page content -->
	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1>Listes des abonnements activés</h1>
					</div>
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="#">Accueil</a>
							</li>
							<li class="breadcrumb-item active">Listes des abonnements activés</li>
						</ol>
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
		</section>

		<!-- Main content -->
		<section class="content">
			<div class="container-fluid">
				<div class="row">
					<div class="col-12">
						<div class="card">
							<div class="card-header">
								<h3 class="card-title">Listes des abonnements activés</h3>
							</div>
							<!-- /.card-header -->
							<div class="card-body">
								{% if abonnementActivated!=null %}


									<table id="example1" class="table table-bordered table-striped">
										<thead>
											<tr>
												<th>Numéro d'activation</th>
												<th>Nom de l'entreprise</th>
												<th>Nom de l'enseigne</th>
												<th>Nom du propriétaire</th>
												<th>Code Qr</th>


											</tr>
										</thead>
										<tbody>
											{% for abonnementActivated in abonnementActivated %}
												<tr>
													<td>{{ abonnementActivated.getAbonnement.getNumeroActivation}}</td>
													<td>{{ abonnementActivated.getEnseigne.getEntreprise.getNomEntreprise}}</td>
													<td>{{ abonnementActivated.getEnseigne.getNomEnseigne}}</td>
													<td>{{ abonnementActivated.getEnseigne.getEntreprise.getNom}}
														{{ abonnementActivated.getEnseigne.getEntreprise.getPrenoms}}</td>
													<td>
														<button type="button" class="btn btn-sm btn-primary">voir code Qr</button>
													</td>

												</tr>
											{% endfor %}
										</tbody>
									</table>
								</tbody>
							</div>
							<!-- /.card-body -->
						</div>


					{% else %}
						<div class="alert alert-warning" role="alert">
							Aucune donnée disponible dans le tableau
						</div>
					{% endif %}

					<!-- /.card -->
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</section><!-- /.content --></div></script>{% endblock %}
