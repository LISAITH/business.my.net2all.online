{% extends 'base.html.twig' %}

{% block title %}
  {{ controller_name ?? "Business" }}
{% endblock %}

{% block sidebar %}
  {% include "layouts/sidebar/point_vente.html.twig" %}
{% endblock %}
{% block stylesheets %}

	<link
	rel="stylesheet" href="{{asset('plugins/fontawesome-free/css/all.min.css')}}">
	<!-- DataTables -->
	<link rel="stylesheet" href=" {{asset('plugins/datatables-bs4/css/dataTables.bootstrap4.min.css')}}">
	<link rel="stylesheet" href=" {{asset('plugins/datatables-responsive/css/responsive.bootstrap4.min.css')}} ">
	<link
	rel="stylesheet" href=" {{asset('plugins/datatables-buttons/css/buttons.bootstrap4.min.css')}}">
	<!-- Theme style -->
	<link rel="stylesheet" href=" {{asset('dist/css/adminlte.min.css')}}">
{% endblock %}
{% block body %}
	<!-- Content Wrapper. Contains page content -->
	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1>Toutes les Formules</h1>

					</div>
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">
								<a href="#">Accueil</a>
							</li>
							<li class="breadcrumb-item active">Toutes les Formules</li>

						</ol>
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
		</section>

		<!-- Main content -->
		<section class="content">
			<div class="container-fluid">
				<div class="row">
					<div class="col-12">
						<div class="card">
							<div class="card-header">
								<h3 class="card-title">Toutes les Formules</h3>

							</div>
							<!-- /.card-header -->
							<div class="card-body">
								{% if souscriptions!=null %}

									<table id="example1" class="table table-bordered table-striped">
										<thead>
											<tr>
												<th>Nom formule</th>
												<th>Services</th>
												<th>Date de début</th>
												<th>Date fin</th>
												<th>Nom enseigne</th>

											</tr>
										</thead>
										<tbody>
											{% for souscription in souscriptions %}
												<tr>
													<td>{{ souscription.getFormule.getNomFormule }}</td>
													<td>
														<button type="button" data-toggle="modal" data-target="#modal{{souscription.getFormule.getId}}" class="btn btn-sm btn-primary">voir services</button>

													</td>
													<td>{{ souscription.getDateDebut |date("d/m/Y")}}</td>
													<td>{{ souscription.getDateFin|date("d/m/Y")}}</td>
													<td>{{ souscription.getEnseigne.getNomEnseigne}}</td>

													{# modals #}
													<div class="modal fade" id="modal{{souscription.getFormule.getId}}" style="display: none;" aria-hidden="true">

														<form action="{{path("formules.service.remove",{id:souscription.getFormule.getId})}}" method="post">

															<div class="modal-dialog modal-md">
																<div class="modal-content">
																	<div class="modal-header badge badge-secondary">
																		<h5 class="modal-title">Voici la liste des services présents dans la formule</h5>
																		<button type="button" class="close" data-dismiss="modal" aria-label="Close">
																			<span aria-hidden="true">×</span>
																		</button>
																	</div>
																	<div class="modal-body">

																		{% for  service in souscription.getFormule.getServices %}


																			<div class="row border-top border-bottom">
																				<div class="row main align-items-center  my-1">
																					<div class="col-3"><img class="img-fluid" src="{{ asset(service.getLogo) }}"></div>
																					<div class="col">

																						<div class="row">{{service.getLibelle}}</div>
																					</div>

																				</div>
																			</div>
																		{% else %}
																			<p>
																				Aucun service associé à cette formule
																			</p>
																		{% endfor %}


																	</div>

																</div>
																<!-- /.modal-content -->
															</div>
															<!-- /.modal-dialog -->


														</tr>
													{% endfor %}
												</tr>
											</tbody>
										</tbody>
									</tfoot>
								</table>
							</div>
							<!-- /.card-body -->
						</div>
					{% else %}
						<div class="alert alert-warning" role="alert">
							Aucune donnée disponible dans le tableau
						</div>
					{% endif %}
					<!-- /.card -->
				</div>
				<!-- /.col -->
			</div>
			<!-- /.row -->
		</div>
		<!-- /.container-fluid -->
	</section>
	<!-- /.content -->
</div></script>{% endblock %}
{% block javascripts %}{% endblock %}
