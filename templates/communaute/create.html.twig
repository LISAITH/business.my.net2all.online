{% extends 'base.html.twig' %} {% block title %}
  {% if editCommunaute %}
    Modifier une Communauté
  {% else %}
    Ajouter une Communauté
  {% endif %}
{% endblock %} {% block body %}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>
                {% if editCommunaute %}
                  Modifier une Communauté
                {% else %}
                  Ajouter une Communauté
                {% endif %}
            </h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">
                <a href="#">Accueil</a>
              </li>
              <li class="breadcrumb-item active">
                    {% if editCommunaute %}
                      Modifier une Communauté
                    {% else %}
                      Ajouter une Communauté
                    {% endif %}
              </li>
            </ol>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <!-- left column -->
          {% for message in app.flashes('success') %}
          <div class="alert alert-success">{{ message }}</div>
          {% endfor %}
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-secondary">
              <div class="card-header">
                <h3 class="card-title"> Entrer toutes les informations d'une Communauté </h3>
              </div>
              <!-- /.card-header -->
              <!-- form start -->
              {{ form_start(form, {'method': 'POST'}) }}
                <div class="card-body row">
                
                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="exampleInputEmail1">Nom de Communauté</label>
                      <div class="input-group mb-3">
                      <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                      </div>
                      {{ form_widget(form.libelle)}}
                      </div>
                      <div class="texte-light text-danger mt-0 ">{{ form_errors(form.libelle) }} </div>
                    </div>
                  </div>

                  <div class="col-md-6">
                    <div class="form-group">
                      <label for="exampleInputFile"> Image du Communauté</label>
                      <div class="input-group">
                        <div class="custom-file">
                          {{ form_widget(form.logo)}}
                          <label class="custom-file-label" for="exampleInputFile">Choisir une image</label>
                        </div>
                        <div class="input-group-append">
                          <span class="input-group-text">Téléverser</span>
                        </div>
                      </div>
                   </div>
                  </div>
              
                  <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Url  de la Communauté</label>
                        <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                        {{ form_widget(form.url)}}
                        </div>
                    </div>
                      <div class="texte-light text-danger mt-0 ">{{ form_errors(form.url) }} </div>
                </div>
                 <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Url de l'application</label>
                        <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                        {{ form_widget(form.app_url)}}
                        </div>
                    </div>
                      <div class="texte-light text-danger mt-0 ">{{ form_errors(form.app_url) }} </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="exampleInputEmail1">Etat Communauté</label>
                        <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <span class="input-group-text"><i class="fas fa-edit"></i></span>
                        </div>
                        {{ form_widget(form.etat)}}
                        </div>
                    </div>
                      <div class="texte-light text-danger mt-0 ">{{ form_errors(form.etat) }} </div>
                </div>
                <div class="col-md-12">
                  <div class="form-group">
                    <label for="exampleInputEmail1">Description  Communauté</label>
                    <div class="input-group mb-3">
                    <div class="input-group-prepend">
                      <span class="input-group-text"><i class="fas fa-edit"></i></span>
                    </div>
                    {{ form_widget(form.description)}}
                    </div>
                    <div class="texte-light text-danger mt-0 ">{{ form_errors(form.description) }} </div>
                  </div>
                </div>
            </div>
                <!-- /.card-body -->
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">
                    {% if editCommunaute %}
                      Modifier une Communauté
                    {% else %}
                      Ajouter une Communauté
                    {% endif %}
                  </button>
                </div>
                {{ form_end(form) }}
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col (left) -->
          <!-- right column -->
          <!-- /.col (right) -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
{% endblock %}