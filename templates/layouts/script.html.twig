  <script>
        $(function () {
          var Toast = Swal.mixin({
              toast: true,
              position: 'top-end',
              showConfirmButton: false,
              timer: 5000
          });
          

            {% for message in app.flashes('flash_success') %}
           
               Toast.fire({
                  icon: 'success',
                  title: '{{ message }}'
               });
            {% endfor %}
            {% for message in app.flashes('flash_error') %}
              
               Toast.fire({
                  icon: 'error',
                  title: '{{ message }}'
               });
            {% endfor %}
            {% for message in app.flashes('flash_info') %}
              
               Toast.fire({
                  icon: 'info',
                  title: '{{ message }}'
               });
            {% endfor %}
         
        });
    </script>
    <script>
        $(function () {
          var current_href = '{{currentPath}}'
          $("nav li a").each(function (index) { 
            $(this).removeClass('active');
          })
          $("nav li").removeClass('menu-open')

          $("nav a").each(function (index) {
            href = $(this).attr('href')
           
            if (href == current_href) {
             
              $(this).addClass('active')

              var element = $(this).parents('li:eq(1)');
            element.addClass("menu-open");
            element.children("a:eq(0)").addClass("active")
            
         
             
            } else {
              $(this).removeClass('active')
              
            }
          })
        })
    </script>


