{% extends 'base.html.twig' %} {% block title %}
  {{ controller_name }}
{% endblock %} 

{% block body %}
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Tous les profils de prospection</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Accueil</a></li>
              <li class="breadcrumb-item active">Tous les profils de prospection</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>
    {% for message in app.flashes('flash_success') %}

        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

	{% for message in app.flashes('flash_error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
	{% endfor %}
    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <div class="card-header">
                <h3 class="card-title">Tous les profils de prospection</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
               {% if profiles != null %}
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Numero</th>
                    <th>Libellé</th>
                    <th>Action</th>
                  </tr>
                  </thead>
                  <tbody>
                  {% for profile  in profiles %}
                  
                  <tr>
                    <td>{{ profile.getId }}</td>
                    <td>{{ profile.getLibelle }}</td>
                  
                    <td>
                         <button type="button" class="btn btn-sm btn-primary" data-toggle="modal" data-target="#modal{{profile.getId}}">
                              Modifier
                          </button>
                    </td>
                     <div class="modal fade" id="modal{{ profile.getId }}" style="display: none;" aria-hidden="true">
                          <form action="{{ path("admin.prospections.profile.update",{id:profile.getId}) }}" method="post">
                            <div class="modal-dialog modal-md">
                              <div class="modal-content">
                                <div class="modal-header badge badge-secondary">
                                  <h5 class="modal-title">Modifier le profil de prospection</h5>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
                                </div>
                                <div class="modal-body">
                                  <p>Entrer le nouveau libellé de ce profil </p>
                                  <div class="form-group">
                                    <label for="id{{ profile.getId }}">Libellé</label>
                                    <input type="text" id="id{{ profile.getId }}" value="{{ profile.getLibelle }}" class="form-control" name="libelle" />
                                  </div>
                                </div>
                                <div class="modal-footer card-footer text-right py-0">
                                  <button type="button" class="btn btn-default" data-dismiss="modal">fermer</button>

                                  <button type="submit" class="btn btn-primary">Modifier</button>
                                </div>
                              </div>
                              <!-- /.modal-content -->
                            </div>
                            <!-- /.modal-dialog -->
                          </form>
                        </div>
                  </tr>
                  {% endfor %}
                 
                </tbody>
                </table>
              
            </div>
              <!-- /.card-body -->
            </div>
            {% else %}
            <div class="alert alert-warning" role="alert">
              Aucun profil de prospection n'est ajouté
            </div>
            {% endif %}
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>

</script>
{% endblock %}
{% block javascripts %}
 
{% endblock %}